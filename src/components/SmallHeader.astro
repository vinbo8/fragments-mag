---

import { Image } from "astro:assets"
import logoImage from "../../public/img/logo.svg"
const base_url = import.meta.env.BASE_URL

const { expand = true } = Astro.props;

---

<script>
	// JavaScript to toggle the mobile menu visibility
	const hamburger = document.getElementsByClassName('hamburger');
	const mobileMenu = document.getElementById('mobile-menu');
	const content = document.getElementById('content')
	
	Array.prototype.forEach.call(hamburger, function(b) {
		console.log(b);
		b.addEventListener('click', () => {
		mobileMenu.classList.toggle('hide-nav');
		mobileMenu.classList.toggle('show-nav');
		content.classList.toggle("testpost");
		}
	)});
</script>

<!-- includes mobile menu -->
<header class="sticky top-50 z-50 bg-white flex flex-col items-center h-full w-full font-serif px-0 py-6 border-b-1">
	<!-- just the header -->
	<div class="flex flex-row w-full text-4xl items-center h-[64px] xl:h-max max-width">
		<div class=`h-[64px] xl:max-h-full`>
			<Image src={logoImage} alt="" class="w-max h-[64px]" />		
		</div>

		<ul class=`resize-animate hidden xl:flex ml-auto text-xl`>
			<li class="px-4"><a href=`${base_url}/articles` class="hover:text-p-red">Articles</a></li>
			<li class="px-4"><a href=`${base_url}/issues` class="hover:text-p-red">Issues</a></li>
			<li class="px-4"><a href=`${base_url}/contact` class="hover:text-p-red">Contact us</a></li>
			<li class="px-4"><a href=`${base_url}/about` class="hover:text-p-red">About</a></li>

		</ul>

		<div class=`w-1/4 xl:hidden text-right`>
			<button class="hamburger" onclick="toggleMenu()">
				<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

	</div>
	<div id="mobile-menu" class="md:text-2xl flex flex-col border-black hide-nav w-full bg-white z-50 fixed items-center
		h-[calc(100dvh-(64px+var(--spacing)*6*2))]  top-[calc(64px+var(--spacing)*6*2)]">
		<div class="py-4"><a href="#" class="hover:text-gray-400">Home</a></div>
		<div class="py-4"><a href="#" class="hover:text-gray-400">About</a></div>
		<div class="py-4"><a href="#" class="hover:text-gray-400">Services</a></div>
		<div class="py-4"><a href="#" class="hover:text-gray-400">Contact</a></div>
	</div>
</header>




